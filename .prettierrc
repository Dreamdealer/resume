{
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "parser": "typescript",
    "tabWidth": 4,
    "printWidth": 120,
    "proseWrap": "never",
    "overrides": [
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.graphql",
            "options": { "parser": "graphql" }
        },
        {
            "files": "*.json",
            "options": { "parser": "json" }
        }
    ]
}
